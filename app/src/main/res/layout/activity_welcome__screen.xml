<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".WelcomeScreen"
    android:background="@drawable/minefield_bg_image"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:outlineProvider="bounds"
        android:weightSum="1"
        android:soundEffectsEnabled="true"
        android:id="@+id/linearLayout"
        android:paddingTop="30dp"
        android:layout_alignParentBottom="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="scores"
            android:id="@+id/Test_Button"
            android:layout_gravity="right"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="274dp"
            android:layout_height="wrap_content"
            android:text="Let&apos;s Play!"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="#676770"
            android:layout_marginTop="-12dp"
            android:textSize="50dp"
            android:textColorHighlight="#3f3d3d"
            android:textAlignment="center"
            android:outlineProvider="bounds" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="EASY"
            android:id="@+id/level1"
            android:background="#b195c0d3"
            android:drawableTint="#2f4091"
            android:shadowColor="#7dbcd3"
            android:textColor="#D7FF33"
            android:layout_marginTop="20dp"
            android:textSize="25dp"
            android:contextClickable="false"
            android:clickable="true"
            android:outlineProvider="paddedBounds"
            android:layout_weight="0.20"
            android:fadingEdge="horizontal"
            android:autoText="false"
            android:longClickable="true"
            android:textStyle="bold"
            android:backgroundTint="#ec517281" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Best Time - 23s"
            android:id="@+id/easyLabel"
            android:textColor="#D7FF33"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/primary_material_light"
            android:backgroundTint="#e9618798" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Medium"

            android:id="@+id/level2"
            android:background="#b195c0d3"
            android:drawableTint="#2f4091"
            android:shadowColor="#7dbcd3"
            android:layout_marginTop="0dp"
            android:textColor="#FFA500"
            android:textSize="25dp"
            android:backgroundTintMode="src_over"
            android:clickable="true"
            android:contextClickable="true"
            android:fadingEdge="horizontal"
            android:outlineProvider="paddedBounds"
            android:layout_weight="0.16"
            android:textStyle="bold"
            android:backgroundTint="#c0618798" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Best Time - 40s"
            android:id="@+id/mediumLabel"
            android:textColor="#FFA500"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@color/primary_material_light"
            android:backgroundTint="#e9618798" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Hard"
            android:id="@+id/level3"
            android:background="#b195c0d3"
            android:drawableTint="#2f4091"
            android:shadowColor="#7dbcd3"
            android:layout_marginTop="0dp"
            android:textColor="#FF3333"
            android:textSize="25dp"
            android:backgroundTintMode="src_over"
            android:contextClickable="true"
            android:clickable="true"
            android:outlineProvider="paddedBounds"
            android:padding="3dp"
            android:layout_weight="0.12"
            android:paddingBottom="15dp"
            android:textStyle="bold"
            android:backgroundTint="#a2618798" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Best time - 130s"
            android:id="@+id/hardLabel"
            android:textColor="#FF3333"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:backgroundTint="#e9618798"
            android:background="@color/primary_material_light" />

        <Button
            android:layout_width="170dp"
            android:layout_height="150dp"
            android:text="Start"
            android:id="@+id/play_btn"
            android:layout_marginTop="30dp"
            android:background="@drawable/mine_start_game"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:textSize="20dp" />


    </LinearLayout>








</RelativeLayout>